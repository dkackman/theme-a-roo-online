  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Deno (edge-src)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "--allow-net",
        "--allow-env",
        "--allow-read",
        "--env-file=../.env.local",
        "index.ts"
      ],
      "cwd": "${workspaceFolder}/edge-src",
      "attachSimplePort": 9229
    },
    {
      "name": "Attach to Deno (9229)",
      "type": "node",
      "request": "attach",
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/edge-src/index.ts",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
